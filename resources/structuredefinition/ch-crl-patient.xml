<?xml version="1.0" encoding="UTF-8"?>
<StructureDefinition xmlns="http://hl7.org/fhir">
    <id value="ch-crl-patient"/>
    <url value="http://fhir.ch/ig/ch-crl/StructureDefinition/ch-crl-patient"/>
    <version value="0.0.1"/>
    <name value="CHCRLPatient"/>
    <title value="CH CRL Patient Profile"/>
    <status value="draft"/>
    <date value="2019-08-16T00:00:00+10:00"/>
    <publisher value="Bundesamt fÃ¼r Gesundheit BAG"/>
    <description value="Profile on Patient for Reporting to the Cancer Registry"/>
    <fhirVersion value="4.0.0"/>


    <mapping>
        <identity value="KRG"/>
        <uri value="https://www.admin.ch/opc/de/classified-compilation/20121618/201806010000/818.33.pdf"/>
        <name value="Krebsregistrierungsgesetz"/>
    </mapping>


    <kind value="resource"/>
    <abstract value="false"/>
    <type value="Patient"/>
    <baseDefinition value="http://fhir.ch/ig/ch-core/StructureDefinition/ch-core-patient"/>
    <derivation value="constraint"/>
    <differential>
        <element id="Patient">
            <path value="Patient"/>
        </element>
        <element id="Patient.identifier">
            <path value="Patient.identifier" />
            <slicing>
                <discriminator>
                    <type value="pattern" />
                    <path value="$this" />
                </discriminator>
                <rules value="open" />
            </slicing>
        </element>
        <element id="Patient.identifier:EPR-SPID">
            <path value="Patient.identifier" />
            <sliceName value="EPR-SPID"/>
            <max value="0"/>    
        </element>
        <element id="Patient.identifier:AHVN13">
            <path value="Patient.identifier" />
            <sliceName value="AHVN13" />
            <min value="1" />
        </element>
        <element id="Patient.name">
            <path value="Patient.name"/>
        </element>
        <element id="Patient.name.family">
            <path value="Patient.name.family"/>
            <min value="1"/>
            <mapping>
                <identity value="KRG"/>
                <map value="Name (Art. 3 Abs. 1 Bst. a)"/>
            </mapping>
        </element>
        <element id="Patient.name.given">
            <path value="Patient.name.given"/>
            <min value="1"/>
        </element>
        <element id="Patient.gender">
            <path value="Patient.gender"/>
            <short value="male | female"/>
            <min value="1"/>
            <max value="1"/>
        </element>
        <element id="Patient.birthDate">
            <path value="Patient.birthDate"/>
            <short value="YYYY-MM-DD"/>
            <min value="1"/>
            <max value="1"/>
        </element>
        <element id="Patient.address">
            <path value="Patient.address"/>
            <short value="An address for the individual ('Wohnsitz')"/>
            <min value="1"/>
            <max value="1"/>
        </element>
        <element id="Patient.address.postalCode">
            <path value="Patient.address.postalCode"/>
            <min value="1"/>
        </element>
    </differential>
</StructureDefinition>